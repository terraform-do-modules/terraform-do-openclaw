# Auto-detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files
*.md text
*.txt text
*.sh text
*.yml text
*.yaml text

# Terraform files
*.tf text
*.tfvars text
*.hcl text

# Scripts
*.bash text
*.sh text eol=lf

# These files are binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.tgz binary

# Exclude files from git export
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
